<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/primaryLightColor</item>
        <item name="toolbarStyle">@style/Toolbar</item>
        <item name="fontFamily">@font/montserrat</item>
        <item name="colorControlNormal">@color/primaryTextColor</item>
    </style>

    <style name="Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:fitsSystemWindows">true</item>
        <item name="titleTextColor">@color/primaryTextColor</item>
    </style>

    <style name="CardItem">
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="cardCornerRadius">20dp</item>
        <item name="cardBackgroundColor">@color/cardBackground</item>
        <item name="contentPadding">10dp</item>
        <item name="cardElevation">0dp</item>

    </style>


    <style name="ItemListId">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="ItemListText">
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/commonText</item>
        <item name="android:textSize">20sp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="DetailsText">
        <item name="android:textColor">@color/commonText</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="DetailsUpdatedTextTitle">
        <item name="android:textColor">@color/commonText</item>
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/montserrat</item>
    </style>

    <style name="CardItem.Details">
        <item name="contentPadding">20dp</item>
    </style>
</resources>
